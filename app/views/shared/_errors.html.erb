<% if @article.errors.any? %>
    <div class="row">
        <div class="col-sm-12 col-sm-offset-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">
                        <%= pluralize(@article.errors.count, "error") %>
                        prohibited the article from being saved:
                    </h2>
                    <div class="card-body">
                        <ul>
                            <% @article.errors.full_messages.each do |msg|%>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
